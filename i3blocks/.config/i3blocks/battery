#!/bin/bash

capacity=$(cat /sys/class/power_supply/BAT0/capacity) || exit
status=$(cat /sys/class/power_supply/BAT0/status)

if [ "$capacity" -ge 75 ]; then
	color="#00bc00"
elif [ "$capacity" -ge 50 ]; then
	color="#dfdfdf"
elif [ "$capacity" -ge 25 ]; then
	color="#eeff00"
else
	color="#ef0000"
	warn="â—"
fi

[ -z $warn ] && warn=""

[ "$status" = "Charging" ] && color="#00bc00"

printf "<span color='%s'>%s%s%s</span>" "$color" "$(echo "$status" | sed -e "s/,//g;s/Discharging/ğŸ”‹/;s/Charging/âš¡/;s/Unknown/â™»ï¸/;s/Full/ğŸ”Œ/;s/ 0*/ /g;s/ :/ /g")" "$warn" "$( [ "$capacity" -eq 100 ] || echo " $capacity" | sed -e 's/$/%/')"

